<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonathan.morpion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".option_screen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".enter_name_screen"
            android:label="@string/title_activity_enter_name_screen"
            android:parentActivityName=".option_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jonathan.morpion.option_screen" />
        </activity>
        <activity
            android:name=".game_screen"
            android:label="@string/title_activity_game_screen"
            android:parentActivityName=".enter_name_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jonathan.morpion.enter_name_screen" />
        </activity>
        <activity
            android:name=".game_screen_with_nav"
            android:label="@string/title_activity_game_screen_with_nav"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>